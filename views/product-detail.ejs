<%- include ('partials/head') %>
<%- include ('partials/nav') %>

<main>

    <!-- 
      - PRODUCT DETAIL
    -->

        <section id="details">
            <div class="group-imgs">   
                <div class="big-img">
                    <img src="/images/<%=product.image%>" alt="Product image" width="100%" id="main-img">
                </div>
            </div> 

            <div class="product-detail">
                <h1><%= product.name %></h1>
                <h2 id="price">$<%= product.price.toFixed(2) %></h2>
                <input type="number" value="1">
                <form method="post" action="/cart">
                    <input type="hidden" value="<%= product._id.toString() %>" name="productId" />
                    <button class="add-to-cart-btn">Add to cart</button>
                  </form>
                  
                <button class="normal-2">Buy Now</button>
                <h4>Description</h4>
                <p><%= product.description %></p>
            </div>
        </section>

  </main>


  <!-- 
    - #NEWSLETTER
  -->

  <section id="newsletter" class="section newsletter-signup" aria label="newsletter-signup">
    <div class="newstext">
        <h4>Sign Up For Newsletters</h4>
        <p>Get E-mail updates about our latest shop and special offers.</p>
    </div>
    <div class="form">
        <input type="text" placeholder="Your Email address">
        <button class="normal">Sign Up</button>
    </div>
</section>

<%- include ('partials/footer') %>
