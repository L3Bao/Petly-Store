<%- include ('partials/head') %>
<%- include ('partials/nav') %>

<div class="add-product">
  <main>
    <div class="heading">
      <h2>Add Product</h2>
    </div>

    <div class="row g-5">
      <div class="col-md-4 col-lg-7 mx-auto">
        <!-- Add enctype="multipart/form-data" to the form tag -->
        <form action="/add-product" method="POST" enctype="multipart/form-data">
          <div class="flex">
            <div class="inputBox">
              <span>Name</span>
              <input type="text" class="box" id="name" name="name" minlength="10" maxlength="20" required>
              <small class="form-text text-muted">Name must be between 10 and 20 characters.</small>
            </div>
          </div>
          <div class="flex">
            <div class="inputBox">
              <span>Price</span>
              <input type="number" step="0.01" class="box" id="price" name="price" min="0" required>
              <small class="form-text text-muted">Price must be a positive number.</small>
            </div>
          </div>
          <div class="flex">
            <div class="inputBox">
              <span>Description</span>
              <textarea class="box" id="description" name="description" rows="3" maxlength="500" required></textarea>
              <small class="form-text text-muted">Description can have at most 500 characters.</small>
            </div>
          </div>
          <!-- Add file input for image upload -->
          <div class="flex">
            <div class="inputBox">            
             <span>Image</span>
              <input type="file" class="box" id="image" name="image" accept="image/*" required>
            </div>
          </div>
          <!-- Add category select field -->
          <div class="flex">
            <div class="inputBox">
              <span>Category</span>
              <select class="box" id="category" name="category" required>
                <option value="">Select Category</option>
                <option value="dog page">Dog</option>
                <option value="cat page">Cat</option>
              </select>
            </div>
          </div>
          <button type="submit" class="admin-btn">Add Product</button>
        </form>
      </div>
    </div>
  </main>
</div>

<%- include ('partials/footer') %>
