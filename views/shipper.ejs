<%- include('partials/head') %>
<%- include('partials/nav') %>

<main>
  <h1>Active Orders</h1>
  
  <div class="shipper-info">
    <h2>Shipper Information</h2>
    <p>Distribution Hub: <%= user.distributionHub %></p>
    <!-- Display other relevant shipper information -->
  </div>
  
  <% if (orders && orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="order">
        <p>Order ID: <%= order._id %></p>
        <p>Customer Name: <%= order.customerName %></p>
        <p>Customer Address: <%= order.customerAddress %></p>
        <p>Customer Phone: <%= order.customerPhone %></p>
        <p>Order Distribution Hub: <%= order.distributionHub %></p>
        <!-- Display other relevant order information -->
      </div>
    <% }); %>
  <% } else { %>
    <p>No active orders available.</p>
  <% } %>
</main>

<%- include('partials/footer') %>
