<%- include ('partials/head') %>
<%- include ('partials/nav') %>

<main id="shipper_main">
  <body>
    <h1>Dog Page <span class="price">Products</span></h1>
    <form action="/products" method="GET">
      <input type="number" name="minPrice" placeholder="Minimum Price" class="search-bar">
      <input type="number" name="maxPrice" placeholder="Maximum Price" class="search-bar">
      <input type="submit" value="Filter" id="filter">
    </form>
    <% if (products.length === 0) { %>
      <p>No products found in the Dog Page category.</p>
    <% } else { %>
    <section class="show-products">
      <% products.forEach((product) => { %>
        <div class="box-container">
          <div class="box">
            <div class="product-box">
              <img src="/images/<%= product.image.replace(/\\/g, '/').replace('public/', '')%>" alt="<%= product.image.replace(/\\/g, '/') %>">
              <span class="name"><a href="/product-detail/<%= product._id %>"><%= product.name %></a></span>
              <span class="price">Price: <%= product.price %></span>
            </div>
              <input type="hidden" name="productId" value="<%= product._id %>" />
              <input type="hidden" name="quantity" value="1" />
              <div class="flex-btn">
                <button class="view-btn"><a href="/product-detail/<%= product._id %>">View</a></button>
                <button type="submit" class="cart-btn">ðŸ›’ Add to Cart</button>
              </div>
            </form>
          </div>
        </div>

        <% }); %>
    </section>
    <% } %>

    <!-- Add any additional HTML, CSS, or JavaScript as needed -->
  </body>
</main>

