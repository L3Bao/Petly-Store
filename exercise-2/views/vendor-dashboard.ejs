<%- include ('partials/head') %>
<%- include ('partials/nav') %>

<link rel="stylesheet" href="/public/css/styles.css">
<link rel="stylesheet" href="/public/css/admin-style.css">

<main>
  <div class="container">
    <h1>Vendor Dashboard</h1>
    <div class="album py-5 bg-body-tertiary" id="products">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% products.forEach(function(product){ %>
            <div class="col">
              <div class="card shadow-sm">
                <img src="/images/<%= product.image %>" alt="<%= product.image %>">
                <div class="card-body">
                  <h3 class="card-title">
                    <%= product.name %>
                  </h3>
                  <h4 class="card-text text-danger">
                    <%= product.price %> AUD
                  </h4>
                    <div class="flex-btn">
                      <a href="product/<%= product._id %>" type="button" class="admin-btn">View</a>
                      <a href="/edit-product/<%= product._id %>" class="update-btn">Edit Product</a>
                      <a href="/product/<%= product._id %>/delete" type="button" class="delete-btn">Delete</a>
                    </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include ('partials/footer') %>
